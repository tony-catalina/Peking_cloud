<div class="page">
  <div class="navbar">
		<!-- 导航条-->
		<div class="navbar-inner">
			<a href="javascript:void(0);" class="link back">
				<i class="icon icon-back"></i>
				<span style="padding-top: 3px">工作告知</span>
			</a>
		</div>
	</div>
  <div class="toolbar tabbar toolbar-bottom">
    <div class="toolbar-inner">
      <!-- additional "data-route-tab-id" must match to tab's ID in the specified routes -->
      <a href="#tab-1" class="tab-link tab-link-active" >涉艾</a>
      <a href="#tab-2" class="tab-link" >涉毒</a>
      <a href="#tab-3" class="tab-link" >其他</a>
    </div>
  </div>
  <!-- Additional "tabs-routable" is required on tabs -->
  <div class="tabs-swipeable-wrap">
    <div class="tabs">
      <div id="tab-1" class="page-content tab tab-active active">
        <div class="list-block" style="margin-top:50px;">
		  <ul>
		  	{{#each data}}
		  	{{#equal dwbh 1}}
		    <li class="accordion-item"><a href="#" class="item-content item-link">
		        <div class="item-inner">
		          <div class="item-title">{{gzrq}}</div>
		        </div></a>
		      <div class="accordion-item-content">
		        <div class="content-block">
		          <p>{{ggnr}}</p>
		        </div>
		      </div>
		    </li>
		    {{else}}
		    {{/equal}}
		    {{/each}}
		  </ul>
		</div>
      </div>
      <div id="tab-2" class="page-content tab">
        <div class="list-block" style="margin-top:50px;">
		  <ul>
		  	{{#each data}}
		  	{{#equal dwbh 2}}
		    <li class="accordion-item"><a href="#" class="item-content item-link">
		        <div class="item-inner">
		          <div class="item-title">{{gzrq}}</div>
		        </div></a>
		      <div class="accordion-item-content">
		        <div class="content-block">
		          <p>{{ggnr}}</p>
		        </div>
		      </div>
		    </li>
		    {{else}}
		    {{/equal}}
		    {{/each}}
		  </ul>
		</div>
      </div>
      <div id="tab-3" class="page-content tab">
        <div class="list-block" style="margin-top:50px;">
		  <ul>
		  	{{#each data}}
		  	{{#equal dwbh 3}}
		    <li class="accordion-item"><a href="#" class="item-content item-link">
		        <div class="item-inner">
		          <div class="item-title">{{gzrq}}</div>
		        </div></a>
		      <div class="accordion-item-content">
		        <div class="content-block">
		          <p>{{ggnr}}</p>
		        </div>
		      </div>
		    </li>
		    {{else}}
		    {{/equal}}
		    {{/each}}
		  </ul>
		</div>
      </div>
    </div>
  </div>
</div>
