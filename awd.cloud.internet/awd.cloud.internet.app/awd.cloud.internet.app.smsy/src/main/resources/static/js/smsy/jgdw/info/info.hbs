<div class="list-block infoblock" style="margin-top:-0px !important;width:100%;height:650px;">
<form id="fm" method="post">
  <ul style="height:35rem;">
  	<input type="text" name="id" style="display:none" value="{{model.id}}">
    <!-- Text inputs -->
    <li style="height: 65px ;">
      <div class="item-content">
        <div class="item-media"><i class="icon icon-form-name"></i></div>
        <div class="item-inner">
          <div class="item-title label">姓名</div>
          <input type="text" name="username" {{disabled}} value="{{model.username}}">
        </div>
      </div>
    </li>
    <!-- 单位名称 -->
    <li style="height: 65px">
      <div class="item-content">
        <div class="item-media"><i class="icon icon-form-comment"></i></div>
        <div class="item-inner">
          <div class="item-title label">单位名称</div>
          <label {{disabled}} style="font-size: initial;width: inherit;">{{model.dwbhString}}</label>
          <!-- <input type="text" id="choosemc" style="display: none" placeholder="选择单位名称" {{disabled}} value="{{model.dwbhString}}" /> -->
          <input type="text" id="dwbhfm" name="dwbh" style="display: none" value="{{model.dwbh}}" />
          <input type="text" id="typefm" name="type" style="display: none" value="{{model.type}}"/>
        </div>
      </div>
    </li>
    <!-- Select -->
    <li style="height: 65px">
      <div class="item-content">
        <div class="item-media"><i class="icon icon-form-gender"></i></div>
        	<div class="item-inner">
          	<div class="item-title label">性别</div>
          	<input type="text" id="choosexb" {{disabled}} placeholder="选择性别"  value="{{model.xbString}}"/>
            <input type="text" id="xbfm" name="xb" style="display: none"  value="{{model.xb}}"/>
        </div>
      </div>
    </li>
    <!-- Text inputs -->
    <li style="height: 65px">
      <div class="item-content">
        <div class="item-media"><i class="icon icon-form-name"></i></div>
        <div class="item-inner">
          <div class="item-title label">警号</div>
          <input type="text" name="jh" {{disabled}} value="{{model.jh}}">
        </div>
      </div>
    </li>
    <!--联系电话-->
    <li style="height: 65px">
      <div class="item-content">
        <div class="item-media"><i class="icon icon-form-tel"></i></div>
        <div class="item-inner">
          <div class="item-title label">联系电话</div>
          <input type="text" name="phone" {{disabled}} value="{{model.phone}}">
        </div>
      </div>
    </li>

    <!-- 单位地址 -->
    <li style="height: 65px" class="useraddress">
      <div class="item-content">
        <div class="item-media"><i class="icon icon-form-comment"></i></div>
        <div class="item-inner">
          <div class="item-title label">单位地址</div>
          	<label class="useraddress" style="font-size: initial;width: inherit;">{{model.address}}</label>
			<input type="text" class="useraddressinput" readonly name="address" style="display:none;" /*{{disabled}}*/ value="{{model.address}}">
        </div>
      </div>
    </li>
    <li style="height: 65px">
      <a href="javascript:void(0);" id="infosave" class="button button-raised button-fill button-big color-blue" style="width:94%;left:3%">保存</a> 	
    </li>    
  </ul>
  
  </form>
  
</div>
